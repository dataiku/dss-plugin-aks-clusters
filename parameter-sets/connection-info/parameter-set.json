{
    "meta" : {
        "label" : "AKS connections",
        "pluralLabel": "AKS connections",
        "description" : "AKS connection settings",
        "icon" : "icon-link"
    },
    
    "defaultDefinableAtProjectLevel" : true,
    "defaultDefinableInline" : true,

    "pluginParams": [
    ],

    "params": [
        {
            "name": "identityType",
            "label": "Identity type",
            "description": "Select the type of identity and the method of specifying it",
            "type": "SELECT",
            "selectChoices": [
                {"value": "default", "label": "Default auto-detected credentials"},
                {"value": "user-assigned-client-id", "label": "User Assigned Managed Identity - Client Id"},
                {"value": "user-assigned-resource-id", "label": "User Assigned Managed Identity - Resource Id"},
                {"value": "service-principal", "label": "App registration"}
            ],
            "defaultValue": "default"
        },
        {
            "name": "userManagedIdentityClientId",
            "label": "Client ID",
            "type": "STRING",
            "mandatory" : false,
            "description": "User Assigned Managed Identity Client ID",
            "visibilityCondition": "model.identityType=='user-assigned-client-id'"
        },
        {
            "name": "userManagedIdentityResourceId",
            "label": "Resource ID",
            "type": "STRING",
            "mandatory" : false,
            "description": "User Assigned Managed Identity Resource ID",
            "visibilityCondition": "model.identityType=='user-assigned-resource-id'"
        },
        {
            "name": "subscriptionId",
            "label": "Azure subscription ID",
            "type": "STRING",
            "mandatory" : false,
            "visibilityCondition": "model.identityType=='service-principal'"
        },
        {
            "name": "tenantId",
            "label": "Directory (tenant) ID",
            "type": "STRING",
            "mandatory" : false,
            "visibilityCondition": "model.identityType=='service-principal'"
        },
        {
            "name": "clientId",
            "label": "Application (client) ID",
            "type": "STRING",
            "mandatory" : true,
            "visibilityCondition": "model.identityType=='service-principal'"
        },
        {
            "name": "password",
            "label": "Password",
            "type": "PASSWORD",
            "mandatory" : true,
            "visibilityCondition": "model.identityType=='service-principal'"
        }
    ]
}
