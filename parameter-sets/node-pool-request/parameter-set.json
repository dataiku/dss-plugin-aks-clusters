{
    "meta": {
        "label": "Node pool",
        "pluralLabel": "Node pools",
        "description": "Configuration for an AKS node pool",
        "icon": "icon-tasks"
    },
    
    "defaultDefinableAtProjectLevel" : true,
    "defaultDefinableInline" : true,
    
    "pluginParams": [
    ],

    "params": [
        {
            "name": "vmSize",
            "label": "Machine type",
            "description": "Azure VM size for the nodes. See Azure documentation for available VM sizes.",
            "type": "STRING",
            "mandatory": true,
            "defaultValue": "Standard_B8ms"
        },
        {
            "name": "osDiskSizeGb",
            "label": "Disk size",
            "description": "Disk size for the nodes (leave 0 for the default by machine type)",
            "type": "INT",
            "mandatory": false
        },
        {
            "name": "numNodes",
            "label": "Default number of nodes",
            "type": "INT",
            "mandatory": true,
            "defaultValue": 3
        },
        {
            "name": "autoScaling",
            "label": "Enable nodes autoscaling",
            "type": "BOOLEAN",
            "mandatory": true,
            "defaultValue": false
        },
        {
            "name": "minNumNodes",
            "label": "Min number of nodes",
            "type": "INT",
            "mandatory": true,
            "defaultValue": 2,
            "visibilityCondition": "model.autoScaling"
        },
        {
            "name": "maxNumNodes",
            "label": "Max number of nodes",
            "type": "INT",
            "mandatory": true,
            "defaultValue": 5,
            "visibilityCondition": "model.autoScaling"
        },
        {
            "type": "SEPARATOR",
            "label": "Networking"
        },
        {
            "name": "useSameNetworkAsDSSHost",
            "label": "Inherit DSS host settings",
            "description": "Create cluster in same VNET/subnet as DSS host",
            "type": "BOOLEAN",
            "mandatory": true,
            "defaultValue": true

        },
        {
            "name": "vnet",
            "label": "Virtual network",
            "description": "",
            "type": "STRING",
            "mandatory": false,
            "visibilityCondition": "!model.useSameNetworkAsDSSHost"
        },
        {
            "name": "subnet",
            "label": "Cluster subnet",
            "description": "Subnet where nodes and pods will be placed",
            "type": "STRING",
            "mandatory": false,
            "visibilityCondition": "!model.useSameNetworkAsDSSHost"
        },
        {
            "name": "resourceGroup",
            "label": "Cluster nodes resource group",
            "description": "Resource Group of the subnet where nodes and pods will be placed. Leave empty if it is the same as the cluster",
            "type": "STRING",
            "mandatory": false,
            "visibilityCondition": "!model.useSameNetworkAsDSSHost"
        }
    ]
}