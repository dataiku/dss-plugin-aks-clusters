{
    "meta" : {
        "label" : "Attach AKS cluster",
        "description" : "Attach to a running AKS cluster",
        "icon" : "icon-puzzle-piece"
    },
    
    "architecture" : "KUBERNETES",

    "params": [
        {
            "name": "connectionInfoV2",
            "label" : "Connection",
            "type": "PRESET",
            "parameterSetId" : "connection-info-v2",
            "mandatory" : true
        },
        {
            "name": "useSameNameAsDSSCluster",
            "label": "Use DSS cluster name",
            "description": "Attach to cluster with the same name as DSS cluster",
            "type": "BOOLEAN",
            "mandatory": true,
            "defaultValue": true

        },
        {
            "name": "clusterName",
            "label" : "Cluster name",
            "description" : "Name of the AKS cluster",
            "type": "STRING",
            "mandatory" : false,
            "visibilityCondition": "!model.useSameNameAsDSSCluster"
        },
        {
            "name": "useSameResourceGroupAsDSSHost",
            "label": "Use DSS resource group",
            "description": "Attach to a cluster in the same resource group as DSS host",
            "type": "BOOLEAN",
            "mandatory": true,
            "defaultValue": true

        },
        {
            "name": "resourceGroupV2",
            "label": "Resource group",
            "description": "Resource group of the cluster",
            "type": "STRING",
            "mandatory": false,
            "visibilityCondition": "!model.useSameResourceGroupAsDSSHost"
        },
        {
            "name": "s-legacy",
            "type": "SEPARATOR",
            "label": "Legacy options"
        },
        {
            "name": "showLegacyOptions",
            "label": "Show legacy options",
            "description": "Display values migrated from previous versions of the plugin",
            "type": "BOOLEAN",
            "mandatory": true,
            "defaultValue": false 
        },
        {
            "name": "connectionInfo",
            "label": "Connection (legacy)",
            "type": "PRESET",
            "parameterSetId": "connection-info",
            "mandatory": false,
            "visibilityCondition": "model.showLegacyOptions"
        },
        {
            "name": "resourceGroup",
            "label" : "Resource group (legacy)",
            "type": "STRING",
            "mandatory" : true,
            "visibilityCondition": "model.showLegacyOptions"
        },
        {
            "name": "cluster",
            "label" : "AKS Cluster name (legacy)",
            "description" : "If different from the DSS cluster name",
            "type": "STRING",
            "mandatory" : true,
            "visibilityCondition": "model.showLegacyOptions"
        }
    ]
}
