{
    "meta" : {
        "label" : "Attach AKS cluster",
        "description" : "Attach to a running AKS cluster",
        "icon" : "icon-puzzle-piece"
    },
    
    "architecture" : "KUBERNETES",

    "params": [
        {
            "name": "connectionInfoV2",
            "label" : "Connection",
            "type": "PRESET",
            "parameterSetId" : "connection-info-v2",
