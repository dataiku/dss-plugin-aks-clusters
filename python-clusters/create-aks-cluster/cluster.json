{
    "meta": {
        "label": "Create AKS cluster",
        "description": "Create AKS clusters",
        "icon": "icon-puzzle-piece"
    },
    "architecture": "KUBERNETES",
    "params": [
        {
            "name": "connectionInfoV2",
            "label": "Connection",
            "type": "PRESET",
            "parameterSetId": "connection-info",
            "mandatory": true
        },
        {
            "name": "clusterVersion",
            "label": "Kubernetes version",
            "type": "STRING",
            "defaultValue": "latest"
        },
        {
            "name": "useSameResourceGroupAsDSSHost",
            "label": "Inherit DSS resource group name",
            "description": "Create cluster in same resource group as DSS host",
            "type": "BOOLEAN",
            "mandatory": true,
            "defaultValue": true

        },
        {
            "name": "resourceGroupV2",
            "label": "Resource group name",
            "description": "Resource group in which to create the cluster",
            "type": "STRING",
            "mandatory": false,
            "visibilityCondition": "!model.useSameResourceGroupAsDSSHost"
        },
        {
            "name": "useSameLocationAsDSSHost",
            "label": "Inherit DSS location",
            "description": "Create cluster in the same location as DSS host",
            "type": "BOOLEAN",
            "mandatory": true,
            "defaultValue": true

        },
        {
            "name": "locationV2",
            "label": "Location",
            "description": "Region in which to create the cluster, e.g. 'France Central'",
            "type": "STRING",
            "mandatory": false,
            "visibilityCondition": "!model.useSameLocationAsDSSHost"
        },
        {
            "name": "clusterIdentity",
            "label": "Identity assumed by cluster components",
            "type": "PRESET",
            "parameterSetId": "cluster-identity",
            "mandatory": true
        },
        {
            "name": "s-nodes",
            "type": "SEPARATOR",
            "label": "Cluster nodes"
        },
        {
            "name": "nodePools",
            "label": "Node pools",
            "description": "Node pools to create in the cluster",
            "type": "PRESETS",
            "parameterSetId": "node-pool-request",
            "mandatory": true
        },
        {
            "name": "advanced-options",
            "type": "SEPARATOR",
            "label": "Advanced options"
        },
        {
            "name": "privateAccess",
            "label": "Private Cluster Endpoint",
            "description": "Cluster endpoint accessible through Private Link. If used, must set Load balancer SKU to Standard",
            "type": "BOOLEAN",
            "defaultValue": false
        },
        {
            "name": "networkPlugin",
            "label": "Kubernetes Network Plugin",
            "description": "Network plugin used for building Kubernetes network",
            "type": "SELECT",
            "selectChoices": [
                {"value": "azure", "label": "Azure CNI"},
                {"value": "kubenet", "label": "kubenet"}
            ],
            "defaultValue": "azure"
        },
        {
            "name": "serviceCIDR",
            "label": "Service CIDR",
            "description": "IP range for services in the cluster (cannot overlap the IP range of the pools' subnets)",
            "type": "STRING",
            "mandatory": true
        },
        {
            "name": "dnsServiceIP",
            "label": "DNS IP",
            "description": "IP in the service IP range to use for the DNS server",
            "type": "STRING",
            "mandatory": true
        },
        {
            "name": "dockerBridgeCidr",
            "label": "Docker Bridge CIDR",
            "description": "A CIDR notation IP range assigned to the Docker bridge network. It must not overlap with any Subnet IP ranges or the Kubernetes service address range.",
            "type": "STRING",
            "defaultValue": "172.17.0.1/16"
        },
        {
            "name": "outboundType",
            "label": "Outbound Type",
            "description": "https://docs.microsoft.com/en-us/azure/aks/egress-outboundtype",
            "type": "SELECT",
            "selectChoices": [
                {"value": "userDefinedRouting", "label": "userDefinedRouting"},
                {"value": "loadBalancer", "label": "loadBalancer"}
            ],
            "defaultValue": "loadBalancer"
        },
        {
            "name": "loadBalancerSku",
            "label": "Load balancer SKU",
            "type": "SELECT",
            "selectChoices": [
                {"value":"Basic", "label":"Basic"},
                {"value":"Standard", "label":"Standard"}
            ],
            "mandatory": false,
            "defaultValue": "Basic"
        },
        {
            "name": "s-legacy",
            "type": "SEPARATOR",
            "label": "Legacy options"
        },
        {
            "name": "showLegacyOptions",
            "label": "Show legacy options",
            "description": "Display values migrated from previous versions of the plugin",
            "type": "BOOLEAN",
            "mandatory": true,
            "defaultValue": false 
        },
        {
            "name": "connectionInfo",
            "label": "Connection (legacy)",
            "type": "PRESET",
            "parameterSetId": "connection-info",
            "mandatory": false,
            "visibilityCondition": "model.showLegacyOptions"
        },
        {
            "name": "resourceGroup",
            "label": "Resource group",
            "type": "STRING",
            "description": "(legacy)",
            "mandatory": true,
            "visibilityCondition": "model.showLegacyOptions"
        },
        {
            "name": "location",
            "label": "Location",
            "description": "Region in which to create the cluster, e.g. 'France Central' (legacy)",
            "type": "STRING",
            "mandatory": true,
            "visibilityCondition": "model.showLegacyOptions"
        },
        {
            "name": "useDistinctSPForCluster",
            "label": "Use distinct credentials (legacy)",
            "type": "BOOLEAN",
            "default": false,
            "mandatory": false,
            "visibilityCondition": "model.showLegacyOptions"
        },
        {
            "name": "clusterServicePrincipal",
            "label": "Identity assumed by nodes",
            "description": "Service principal used by the cluster's nodes (if different from the connection)",
            "type": "PRESET",
            "parameterSetId": "connection-info",
            "mandatory": false,
            "visibilityCondition": "model.showLegacyOptions && model.useDistinctSPForCluster"
        }
    ]
}
